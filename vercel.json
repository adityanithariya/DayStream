{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**", "node_modules/**"] },
      "functions": {
        "controllers/*.js": { "maxDuration": 60 },
        "middleware/**/*.js": { "maxDuration": 60 }
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.js"
    }
  ]
}
